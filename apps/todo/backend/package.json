{
  "name": "@incubator/todo-backend",
  "version": "0.0.1",
  "private": true,
  "description": "A simple todo backend",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "pnpm clean && pnpm compile",
    "clean": "shx rm -rf dist",
    "compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@hono/zod-validator": "^0.2.0",
    "@incubator/shared": "workspace:*",
    "@prisma/client": "5.11.0",
    "argon2": "^0.40.1",
    "dotenv": "^16.4.5",
    "hono": "^4.1.1"
  },
  "devDependencies": {
    "@incubator/typescript-config": "workspace:*",
    "@types/node": "^20.11.28",
    "prisma": "^5.11.0",
    "shx": "^0.3.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  }
}
