{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "DATABASE_URL",
    "FRONTEND_PROD_URL",
    "SENTRY_DSN",
    "JWT_SECRET",
    "DOMAIN",
    "PORT",
    "PROD",
    "VITE_SENTRY_DSN",
    "VITE_API_BASEPATH",
    "NODE_ENV",
    "SENTRY_AUTH_TOKEN",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "SEED_USER_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "start": {
      "dependsOn": [
        "^start"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "clean": {
      "dependsOn": [
        "^clean"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
